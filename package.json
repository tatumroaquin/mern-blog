{
  "name": "mern-blog",
  "version": "1.0.0",
  "description": "A blogging platform made with the MERN stack",
  "scripts": {
    "clean": "pnpm --stream -r run clean",
    "deps": "pnpm --stream -r install",

    "build": "pnpm --stream -r run build",
    "build:server": "pnpm -F @mern-blog/server build",
    "build:client": "pnpm -F @mern-blog/client build",

    "start": "pnpm --stream -r start",
    "start:server": "pnpm -F @mern-blog/server start",
    "start:client": "pnpm -F @mern-blog/client start",

    "dev": "pnpm --stream -r run dev",
    "dev:server": "pnpm -F @mern-blog/server dev",
    "dev:client": "pnpm -F @mern-blog/client dev"
  },
  "author": "Tatum Roaquin",
  "license": "GPL-3.0-or-later"
}
